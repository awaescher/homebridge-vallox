{
  "pluginAlias": "Homebridge Vallox",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "ip": {
        "title": "IP address of the Vallox device in your local network.",
        "type": "string",
        "required": true,
        "placeholder": "192.168.0.100"
      },
      "port": {
        "title": "Port on which the connection to the Vallox device should be made on",
        "type": "number",
        "required": true,
        "default": 80
      }
    }
  }
}