{
  "pluginAlias": "Vallox",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "ip": {
        "title": "IP address of the Vallox device in your local network.",
        "type": "string",
        "required": true,
        "default": "192.168.0.99"
      },
      "port": {
        "title": "Port on which the connection to the Vallox device should be made on",
        "type": "integer",
        "required": true,
        "default": 80,
        "minimum": 1,
        "maximum": 99999
      }
    }
  }
}